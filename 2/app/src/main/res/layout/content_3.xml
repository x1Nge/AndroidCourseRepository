<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow>
        <TextView
            android:text = "    Open..."
            android:padding="6dp"/>
        <TextView
            android:text="Ctrl + 6"
            android:gravity="right"
            android:padding="6dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text = "    Save..."
            android:padding="6dp"/>
        <TextView
            android:text="Ctrl + S"
            android:gravity="right"
            android:padding="6dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text = "    Save As..."
            android:padding="6dp"/>
        <TextView
            android:text="Ctrl + Shift + S"
            android:gravity="right"
            android:padding="6dp" />
    </TableRow>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@android:color/holo_orange_light" />

    <TableRow>
        <TextView
            android:text = "X  Import..."
            android:padding="6dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text = "X  Export..."
            android:padding="6dp"/>
        <TextView
            android:text="Ctrl + E"
            android:gravity="right"
            android:padding="6dp" />
    </TableRow>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@android:color/holo_orange_light" />

    <TableRow>
        <TextView
            android:text = "    Quit"
            android:padding="6dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/back_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="返回" />
    </TableRow>

</TableLayout>